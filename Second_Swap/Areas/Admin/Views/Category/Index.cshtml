@model IEnumerable<Second_Swap.Models.Category>

@{

    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- page css -->
<link href="~/student/assets/vendors/datatables/dataTables.bootstrap.min.css" rel="stylesheet">

<div class="header-sub-title">
    <nav class="breadcrumb breadcrumb-dash">
        <a class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
        <span class="breadcrumb-item active">Category</span>
    </nav>
</div>

<a class="btn btn-outline-info btn-sm add" asp-area="Admin" asp-controller="Category" asp-action="Create" title="Create" style="margin-bottom: 20px">
    New Role <i class="bx bx-list-plus"></i>
</a>
<div class="card">
    <div class="card-body">
        <table id="data-table" class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Avatar</th>
                    <th>Create Day</th>
                    <th>Last Update</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>@category.Description</td>
                        <td>
                            @if (string.IsNullOrEmpty(category.Avatar))
                            {
                                <div class="avatar avatar-image">
                                    <img src="~/img/NoImage.png" alt="avatar">
                                </div>
                            }
                            else
                            {
                                <div class="avatar avatar-image">
                                    <img src="~/Uploads/@category.Avatar" alt="avatar">
                                </div>
                            }
                        </td>
                        <td>
                            @category.CreateDay
                        </td>
                        <td>
                            @category.LastUpdated
                        </td>
                        <td>
                            <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">
                                @if (category.Status.ToString() == "False")
                                {
                                    <i class="anticon anticon-close btn btn-outline-danger btn-sm"></i>
                                }
                                else
                                {

                                    <i class="anticon anticon-check btn btn-outline-success btn-sm"></i>
                                }
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-outline-success btn-sm edit" asp-area="Admin" asp-action="Edit" asp-route-id="@category.Id" title="Edit">
                                Edit <i class="fas fa-pencil-alt"></i>
                            </a>
                            
                        </td>

                    </tr>

                }

            </tbody>
            <tfoot>

                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Avatar</th>
                    <th>Create Day</th>
                    <th>Last Update</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

@section Scripts{

    <!-- page js -->
    <script src="~/student/assets/vendors/datatables/jquery.dataTables.min.js"></script>
    <script src="~/student/assets/vendors/datatables/dataTables.bootstrap.min.js"></script>
}