@model Second_Swap.ViewModels.ProfileDisplayModel


<h3 class="mb20 user-title"> <strong>Manage Order</strong> </h3>

<div class="card">
    <div class="card-body">
        <table id="data-table" class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Buyer</th>
                   
                    <th>Method Payment</th>
                    <th>Status</th>
                    <th>Message</th>
                    <th>Create Day</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Order)
                {
                    <tr>
                        <td>@order.Product.Title</td>
                        <td>@order.Buyer.FullName</td>
                        
                        <td>
                            @order.MethodPayment
                        </td>
                        <td>
                            @order.Status
                        </td>
                        <td>
                            @order?.Message
                        </td>
                        <td>
                            @order.CreateAt
                        </td>
                        <td>
                            <a class="btn btn-outline-success btn-sm edit" asp-controller="Order" asp-action="Approved" asp-route-id="@order.Id" title="Edit">
                                Approved
                            </a>
                            <a class="btn btn-outline-success btn-sm edit" style="margin-top:5px" title="Edit">
                                Reject
                            </a>
                        </td>

                    </tr>

                }

            </tbody>
            <tfoot>

                <tr>
                    <th>Product</th>
                    <th>Buyer</th>

                    <th>Method Payment</th>
                    <th>Status</th>
                    <th>Message</th>
                    <th>Create Day</th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

@section Scripts {

    <!-- page js -->
    <script src="~/student/assets/vendors/datatables/jquery.dataTables.min.js"></script>
    <script src="~/student/assets/vendors/datatables/dataTables.bootstrap.min.js"></script>
}